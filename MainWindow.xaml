<Window x:Class="_312576HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312576HelloWorld"
        mc:Ignorable="d"
        Title="My First Progam" Height="350" Width="525" FontSize="20">
    <StackPanel>
        <Label x:Name="message" Content="Hello World!"/>
        <TextBox x:Name="btnGreeting" Text="Enter your name here..."/>
        <Button x:Name="Greeting" Content="Click" Click="btnGreeting_Click"/>
    </StackPanel>
</Window>
